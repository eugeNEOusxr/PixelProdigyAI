{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [
		"server.ts",
		"server/**/*.ts"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
